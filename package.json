{
    "name": "gulp",
    "version": "1.0.0",
    "author": "Dima Dodonov dimadodonov@icloud.com",
    "license": "WTFPL",
    "type": "module",
    "scripts": {
        "dev": "gulp watch",
        "build:dev": "gulp build",
        "build:prod": "gulp build --prod",
        "eslint": "eslint --format=node_modules/eslint-formatter-pretty src/js/",
        "eslint-fix": "npm run eslint -- --fix",
        "style:lint": "stylelint src/scss/**/*.scss --config ./.stylelintrc.json",
        "style:fix": "stylelint src/scss/**/*.scss --fix Ð°--config ./.stylelintrc.json",
        "prettier": "prettier --write src/**/*.js",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "src/js/**/*.{js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "src/scss/**/*.scss": [
            "stylelint --fix --config ./.stylelintrc.json",
            "prettier --write"
        ]
    },
    "keywords": [
        "gulp",
        "js",
        "sass",
        "pug",
        "linters"
    ],
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not IE 11"
    ],
    "devDependencies": {
        "@babel/core": "^7.24.6",
        "@babel/eslint-parser": "^7.24.6",
        "@babel/preset-env": "^7.24.6",
        "@babel/register": "^7.24.6",
        "babelify": "^10.0.0",
        "browser-sync": "^3.0.2",
        "browserify": "^17.0.0",
        "del": "^7.1.0",
        "eslint": "^9.4.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-formatter-pretty": "^6.0.1",
        "eslint-plugin-babel": "^5.3.1",
        "eslint-plugin-prettier": "^5.1.3",
        "gulp": "^5.0.0",
        "gulp-autoprefixer": "^9.0.0",
        "gulp-changed": "^5.0.2",
        "gulp-clean-css": "^4.3.0",
        "gulp-group-css-media-queries": "^1.2.2",
        "gulp-if": "^3.0.0",
        "gulp-imagemin": "^9.1.0",
        "gulp-notify": "^4.0.0",
        "gulp-plumber": "^1.2.1",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^5.1.0",
        "gulp-sass-glob": "^1.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-svg-sprite": "^2.0.3",
        "gulp-svgmin": "^4.1.0",
        "gulp-uglify": "^3.0.2",
        "husky": "^9.0.11",
        "imagemin-pngquant": "^10.0.0",
        "imagemin-webp": "^8.0.0",
        "import-fresh": "^3.3.0",
        "lint-staged": "^15.2.5",
        "postcss-loader": "^8.1.1",
        "prettier": "^3.3.0",
        "sass": "^1.77.4",
        "stylelint": "^16.6.1",
        "stylelint-config-standard-scss": "^13.1.0",
        "stylelint-order": "^6.0.4",
        "stylelint-scss": "^6.3.0",
        "stylelint-selector-bem-pattern": "^4.0.0",
        "vinyl-buffer": "^1.0.1",
        "vinyl-source-stream": "^2.0.0"
    },
    "dependencies": {
        "@fancyapps/ui": "^5.0.36",
        "focus-visible": "^5.2.0",
        "normalize.css": "^8.0.1",
        "smart-grid": "^2.1.2",
        "svg4everybody": "^2.1.9",
        "vanilla-lazyload": "^19.1.3"
    }
}
